<?xml version="1.0" encoding="utf-8"?>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:shrinkColumns="3">

        <TableRow android:layout_marginTop="250px"
            android:gravity="left">

            <Button
                android:id="@+id/table_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一个Button" />

            <Button
                android:id="@+id/table_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第二个Button" />
        </TableRow>

        <TableRow android:layout_marginTop="100px"
            android:gravity="left">

            <Button
                android:id="@+id/table_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="第三个Button" />
        </TableRow>

        <TableRow android:layout_marginTop="100px"
            android:gravity="left">

            <Button
                android:id="@+id/table_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第四个Button" />


        </TableRow>

    <Button
        android:id="@+id/table_button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="600px"
        android:text="返回" />

    </TableLayout>
